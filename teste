name: Testes

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build-and-test:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4 # Esta ação faz o checkout do código
    - name: Configurar Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '20'
    - name: Instalar dependências
      run: npm ci
    - name: Executar testes
      run: npm test
